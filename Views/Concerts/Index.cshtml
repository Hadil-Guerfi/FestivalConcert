@model IEnumerable<FestivalCarthage.Models.Concert>

@{
    ViewData["Title"] = "Concerts";
}

<div class="container my-5">
    <!-- Title Section -->
    <h1 class="text-center text-4xl font-extrabold text-green-800 mb-8">Liste des Concerts</h1>

    <!-- Add New Concert Button -->
    <div class="row mb-4 justify-content-center">
        <div class="col-md-12 text-center">
            <a class="btn btn-lg btn-primary shadow-lg hover:scale-105 transform transition duration-300 ease-in-out"
               href="@Url.Action("Create", "Concerts")">
                <i class="bi bi-plus-circle"></i> Ajouter un Concert
            </a>
        </div>
    </div>

    <!-- Concert Table Section -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow-sm rounded-lg">
            <thead class="bg-gradient-to-r from-green-400 to-green-600 ">
                <tr>
                    <th>Nom</th>
                    <th>Artiste</th>
                    <th>Date</th>
                    <th>Heure</th>
                    <th>Lieu</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var concert in Model)
                {
                    <tr>
                        <td>@concert.Nom</td>
                        <td>@concert.Artiste</td>
                        <td>@concert.DateConcert.ToString("d")</td>
                        <td>@concert.HeureConcert.ToString(@"hh\:mm")</td>
                        <td>@concert.Lieu</td>
                        <td>@concert.Prix.ToString("C")</td>
                        <td class="d-flex gap-3">
                            <!-- Details Button -->
                            <a href="@Url.Action("Details", "Concerts", new { id = concert.Id })" class="btn btn-info btn-sm shadow-md hover:bg-info-600 transform transition duration-300 ease-in-out">
                                <i class="bi bi-eye"></i> DÃ©tails
                            </a>

                            <!-- Edit Button -->
                            <a href="@Url.Action("Edit", "Concerts", new { id = concert.Id })" class="btn btn-warning btn-sm shadow-md hover:bg-warning-600 transform transition duration-300 ease-in-out">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>

                            <!-- Delete Button -->
                            <a href="@Url.Action("Delete", "Concerts", new { id = concert.Id })" class="btn btn-danger btn-sm shadow-md hover:bg-danger-600 transform transition duration-300 ease-in-out">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Add Tailwind CSS CDN for Additional Styling (optional) -->
<script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.js"></script>
