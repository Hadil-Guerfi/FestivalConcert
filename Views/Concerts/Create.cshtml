@model FestivalCarthage.Models.Concert

@{
    ViewData["Title"] = "Create Concert";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Artiste" class="control-label"></label>
        <input asp-for="Artiste" class="form-control" />
        <span asp-validation-for="Artiste" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateConcert" class="control-label"></label>
        <input asp-for="DateConcert" class="form-control" />
        <span asp-validation-for="DateConcert" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeureConcert" class="control-label"></label>
        <input asp-for="HeureConcert" class="form-control" />
        <span asp-validation-for="HeureConcert" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Lieu" class="control-label"></label>
        <input asp-for="Lieu" class="form-control" />
        <span asp-validation-for="Lieu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix" class="control-label"></label>
        <input asp-for="Prix" class="form-control" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
